diff --git a/pyproject.toml b/pyproject.toml
index 9feb4e0..ab6ec47 100644
--- a/pyproject.toml
+++ b/pyproject.toml
@@ -1,3 +1,28 @@
+[project]
+name = "aioazuredevops"
+version = "2.2.1"
+description = "Get data from the Azure DevOps API"
+authors = [
+    { name = "Aidan Timson (Timmo)", email = "aidan@timmo.dev" }
+]
+license = { text = "Apache-2.0" }
+readme = "README.md"
+keywords = ["aioazuredevops", "api", "async", "asyncio", "azure devops", "devops", "integration"]
+requires-python = ">=3.11"
+dependencies = []  # See requirements.txt
+classifiers = []
+
+[project.urls]
+Homepage = "https://github.com/timmo001/aioazuredevops"
+
+[tool.setuptools]
+packages = ["aioazuredevops"]
+include-package-data = true
+
+[build-system]
+requires = ["setuptools>=61", "wheel", "incremental"]
+build-backend = "setuptools.build_meta"
+
 [tool.black]
 extend-exclude = "/generated/"
 
