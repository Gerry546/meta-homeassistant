Subject: [PATCH] Make PEP517 compliant

Signed-off-by: Tom Geelen <t.f.g.geelen@gmail.com>
Upstream-Status: Pending
---
 pyproject.toml | 47 +++++++++++++++++++++++++++++++++++++++++++++++
 setup.py       |  2 +-
 2 files changed, 48 insertions(+), 1 deletion(-)
 create mode 100644 pyproject.toml

diff --git a/pyproject.toml b/pyproject.toml
new file mode 100644
index 0000000..bb8ed30
--- /dev/null
+++ b/pyproject.toml
@@ -0,0 +1,47 @@
+[project]
+name = "aiohttp-sse-client2"
+version = "0.3.0"
+description = "A Server-Sent Event python client base on aiohttp"
+authors = [
+    { name = "Jason Hu", email = "awaregit@gmail.com" }
+]
+license = { text = "Apache License 2.0" }
+readme = "README.rst"
+keywords = ["aiohttp_sse_client"]
+classifiers = [
+    "Development Status :: 3 - Alpha",
+    "Framework :: AsyncIO",
+    "Intended Audience :: Developers",
+    "License :: OSI Approved :: Apache Software License",
+    "Natural Language :: English",
+    "Programming Language :: Python :: 3",
+    "Programming Language :: Python :: 3.7",
+    "Programming Language :: Python :: 3.8",
+    "Programming Language :: Python :: 3.9",
+    "Programming Language :: Python :: 3.10",
+    "Programming Language :: Python :: 3.11",
+    "Topic :: Internet :: WWW/HTTP"
+]
+requires-python = ">=3.7"
+dependencies = [
+    "aiohttp>=3",
+    "attrs",
+    "multidict",
+    "yarl"
+]
+
+[project.urls]
+Homepage = "https://github.com/JelleZijlstra/aiohttp-sse-client2"
+
+[tool.setuptools]
+packages = ["aiohttp_sse_client2"]
+include-package-data = true
+
+[build-system]
+requires = ["setuptools>=61", "wheel"]
+build-backend = "setuptools.build_meta"
+
+[project.optional-dependencies]
+test = [
+    "pytest"
+]
diff --git a/setup.py b/setup.py
index eda6136..d167fdf 100644
--- a/setup.py
+++ b/setup.py
@@ -13,7 +13,7 @@ with open('HISTORY.rst') as history_file:
 
 requirements = ['aiohttp>=3', 'attrs', 'multidict', 'yarl', ]
 
-setup_requirements = ['pytest-runner', ]
+setup_requirements = []
 
 test_requirements = ['pytest', ]
 
